<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewDoctorDetails">

    <LinearLayout
        style="@style/LinearLayoutStyle"
        app:layout_constraintBaseline_toBaselineOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textview_doctor_header"
            android:text="Personal details: "
            style="@style/TextStyle" />

        <TextView
            android:id="@+id/textview_doctor_details"
            android:text="your details: "
            style="@style/TextStyle" />

        <Button
            android:id="@+id/doctor_update_details"
            style="@style/ButtonStyle"
            android:text="Doctor Update Details" />


        <Button
            android:id="@+id/button_doctor_back"
            style="@style/ButtonStyle"
            android:text="Doctor main"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>