<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserFoodAndNutrition">

    <LinearLayout
        style="@style/LinearLayoutStyle"
        app:layout_constraintTop_toTopOf= "parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/mother_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mother3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <Button
                android:id="@+id/button_mother_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I-trimester"
                style="@style/ButtonStyle"
                android:textColor="#ffffff"
                android:background="@drawable/round_button" />

            <Button
                android:id="@+id/button_mother_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="II-trimester"
                style="@style/ButtonStyle"
                android:textColor="#ffffff"
                android:background="@drawable/round_button" />

            <Button
                android:id="@+id/button_mother_third"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="III-trimester"
                android:textColor="#ffffff"
                android:background="@drawable/round_button" />
        </LinearLayout>

        <Button
            android:id="@+id/food_avoid"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F44336"
            android:text="AVOID FOOD"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center" />


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/childeat">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_child_first"
                        style="@style/ButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0-4mnths"
                        android:layout_weight="3"
                        android:textColor="#ffffff"
                        android:background="@drawable/round_button" />

                    <Button
                        android:id="@+id/button_child_second"
                        style="@style/ButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4-6mnths"
                        android:layout_weight="3"
                        android:textColor="#ffffff"
                        android:background="@drawable/round_button" />

                    <Button
                        android:id="@+id/button_child_third"
                        style="@style/ButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6-8mnths"
                        android:layout_weight="3"
                        android:textColor="#ffffff"
                        android:background="@drawable/round_button" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="70dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_child_fourth"
                        style="@style/ButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8-10mnths"
                        android:textColor="#ffffff"
                        android:layout_weight="3"
                        android:background="@drawable/round_button" />

                    <Button
                        android:id="@+id/button_child_fifth"
                        style="@style/ButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">1 year"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:layout_weight="3"
                        android:background="@drawable/round_button" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


</android.support.constraint.ConstraintLayout>