<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/jssk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/coljssk" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/bullet1"
                        style="@style/TextStyle"
                        android:text="Janani Shishu Suraksha Karyakram"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/c1"
                        style="@style/ButtonStyle"
                        android:text="Details"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"/>
                    <Button
                        android:id="@+id/apply_govtscheme_jssk"
                        style="@style/ButtonStyle"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"
                        android:text="How to Apply" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fbnc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/colfbnc" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/bullet2"
                        style="@style/TextStyle"
                        android:text="Facility Based Newborn Care"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/c2"
                        style="@style/ButtonStyle"
                        android:text="Details"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"/>

                    <Button
                        android:id="@+id/apply_govtscheme_fbnc"
                        style="@style/ButtonStyle"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"
                        android:text="How to Apply" />
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hbnc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/colhbnc" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/bullet3"
                        style="@style/TextStyle"
                        android:text="Home Based Newborn Care"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/c3"
                        style="@style/ButtonStyle"
                        android:text="Details"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"/>
                    <Button
                        android:id="@+id/apply_govtscheme_hbnc"
                        style="@style/ButtonStyle"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"
                        android:text="How to Apply" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/inap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/colinap" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/bullet4"
                        style="@style/TextStyle"
                        android:text="India Newborn Action Plan"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/c4"
                        style="@style/ButtonStyle"
                        android:text="Details"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"/>

                    <Button
                        android:id="@+id/apply_govtscheme_inap"
                        style="@style/ButtonStyle"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"
                        android:text="How to Apply" />
                </LinearLayout>

                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rbsk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/colrbsk" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/bullet5"
                        style="@style/TextStyle"
                        android:text="Rashtriya Bal Swasthya Karyakram"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/c5"
                        style="@style/ButtonStyle"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"
                        android:text="Details"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/apply_govtscheme_rbsk"
                        style="@style/ButtonStyle"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"
                        android:text="How to Apply"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>




</android.support.constraint.ConstraintLayout>