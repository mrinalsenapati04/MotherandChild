<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginEmployee">


    <LinearLayout
        style="@style/LinearLayoutStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/edittext_employee_email"
            style="@style/EditTextStyle"
            android:hint="Enter Your Email-ID"
            android:inputType="textEmailAddress" />


        <EditText
            android:id="@+id/edittext_employee_password"
            style="@style/EditTextStyle"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button_employeelogin"
            style="@style/ButtonStyle"
            android:background="@drawable/round_button"
            android:text="LOGIN"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_employeeregister"
            style="@style/TextStyle"
            android:text="New Employee? Register" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>